# Discord Bot Configuration
# Copy this file to .env and fill in your actual values

# Your Discord bot token (required)
# Get this from: https://discord.com/developers/applications
DISCORD_TOKEN=your_bot_token_here

# Your Discord application client ID (optional, for slash command syncing)
# Get this from: https://discord.com/developers/applications
CLIENT_ID=your_client_id_here

# Database Configuration (Supabase)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Optional: Discord Role Configuration
ADMIN_ROLE_IDS=123456789,987654321
ALLOWED_ROLE_IDS=111222333,444555666
OFFICER_ROLE_IDS=777888999,123123123

# Default harvester percentage for spice split operations (optional, default: 25.0)
# This percentage determines how much of the total sand goes to the harvester
# Example: DEFAULT_HARVESTER_PERCENTAGE=30.0
DEFAULT_HARVESTER_PERCENTAGE=25.0

# Fly.io Configuration
PORT=8080
